  <!-- Steps Widget ****************** -->

  <Steps
    id="steps"
    title="Set up your feeds in no time."
    items={[
      {
        title: 'Step 1: <span class="font-medium">Invite me</span>',
        description:
          'Click <a class="text-blue-700 dark:text-blue-400 hover:underline" href="https://discord.com/oauth2/authorize?client_id=268478587651358721&scope=bot&permissions=19456" target="_blank" rel="noopener noreferrer">this link</a> to invite me to your server.',
        icon: 'tabler:user-plus',
      },
      {
        title: 'Step 2: <span class="font-medium">Find a valid RSS feed</em>',
        description: 'All it takes is some Googling - an example feed would be https://www.gameinformer.com/news.xml.',
        icon: 'tabler:search',
      },
      {
        title: 'Step 3: <span class="font-medium">Add the feed</span>',
        description: 'Open the <a class="text-blue-700 dark:text-blue-400 hover:underline" href="https://my.monitorss.xyz" target="_blank" rel="noopener noreferrer">dashboard</a> and add the feed to a server channel.',
        icon: 'tabler:plus',
      },
      {
        title: 'Done!',

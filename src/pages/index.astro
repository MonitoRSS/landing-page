    <Fragment slot="title">
      Automate your Discord news feed.
      <!-- Free template for <span class="hidden xl:inline">creating websites with</span>
      <span class="text-accent dark:text-white highlight"> Astro 2.0</span> + Tailwind CSS -->
    </Fragment>

    <Fragment slot="subtitle">
      Auto-deliver news from YouTube, Reddit, and more to your Discord server. Free for up to 3 feeds.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <!-- <Note /> -->

  <!-- Stats Widget ****************** -->

  <Stats
    subtitle="Since 2017"
    items={[
      { name: 'Communities', value: '100k' },
      { name: 'Sources of news registered', value: '90k' },
      { name: 'Articles delivered', value: '750m' },
    ]}
  />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What you get with MonitoRSS"
    subtitle="A taste of what you can do"
    items={[
      {
        title: 'Article Filtering',
        description: "Only get relevant content—filter by keywords, author, or topic to keep your feed focused.",
        icon: 'tabler:filter',
      },
      {
        title: 'Notifications',
        description: 'Alert specific members when their interests are mentioned—perfect for mod teams and topic experts.',
        icon: 'tabler:at',
      },
      {
        title: 'Content Extraction',
        description: 'Pull titles, images, authors, or custom data from any article.',
        icon: 'tabler:copy',
      },
      {
        title: 'Custom Formats',
        description: 'Match your server\'s style with embeds, plain text, or rich formatting.',
        icon: 'tabler:tools',
      },
      {
        title: 'Reliability',
        description: '7+ years uptime, 500M+ articles delivered. Your feeds won\'t break.',
        icon: 'tabler:shield-check-filled',
      },
      {
        title: 'Open Source',
        description:
          'Host the bot on your own. The source code is openly available under the MIT license for anyone to use and host. Spread the love!',
        icon: 'tabler:brand-github',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Common news feeds"
    subtitle="Used by various communities right this moment!"
    tagline="Use cases"
    items={[
      {
        title: 'Social Media',
        description:
          'Get notified when someone creates a new post on Reddit or uploads a YouTube video that you are interested in.',
        icon: 'flat-color-icons:reddit',
      },
      {
        title: 'Investments',
        description:
          'Make informed financial decisions by receiving updates on the latest news and trends in the stock market or cryptocurrencies.',
        icon: 'flat-color-icons:bullish',
      },
      {
        title: 'Traditional News',
        description:
          "Stay up to date on everything that's happening in your local community, or just the world in general.",
        icon: 'flat-color-icons:news',
      },
      {
        title: 'Games',
        description:
          'Get notified of updates, releases, or discounts from your favorite game developers and publishers.',
        icon: 'flat-color-icons:steam',
      },
      {
        title: 'Weather',
        description: 'Plan ahead by getting weather forecasts or alerts to stay safe.',
        icon: 'flat-color-icons:landscape',
      },
      {
        title: 'Anime',
        description: 'Get notified when a new episode of your favorite anime is released.',
        icon: 'flat-color-icons:reading-ebook',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
